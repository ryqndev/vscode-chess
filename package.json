{
  "name": "ryqndev-chess",
  "version": "0.1.1",
  "displayName": "Chess",
  "description": "Negative productivity VSCode extension to play chess directly in your IDE against a configurable AI backed by stockfish.",
  "engines": {
    "vscode": "^1.90.0"
  },
  "repository": "https://github.com/ryqndev/vscode-chess",
  "publisher": "ryqndev",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "files": [
    "src/app/dist"
  ],
  "contributes": {
    "commands": [
      {
        "command": "chess.startChessPuzzle",
        "title": "Start a new chess puzzle"
      }
    ]
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "pnpm run compile-web",
    "vscode:prepublish": "pnpm run package-web",
    "compile-web": "cd src/app && pnpm run build && cd ../../ webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/assert": "^1.5.10",
    "@types/mocha": "^10.0.6",
    "@types/vscode": "^1.90.0",
    "@types/webpack-env": "^1.18.5",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-web": "^0.0.54",
    "assert": "^2.1.0",
    "eslint": "^8.57.0",
    "mocha": "^10.4.0",
    "process": "^0.11.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "zustand": "^5.0.2"
  }
}
